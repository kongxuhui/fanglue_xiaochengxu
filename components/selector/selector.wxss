.selectBox {
  width: 100%;
  height: 1.5rem;
  border: 1px solid #bfbfbf;
  border-radius: 20rpx;
  position: relative;
  padding-left: 10rpx;
  font-size: 24rpx;
}

.selectBox .select {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.selectBox .select .select_text {
  font-size: 24rpx;
  color: black;
  line-height: 28rpx;
  flex: 1;
}

.selectBox .select .select_img {
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition: transform 0.3s;
}

.selectBox .select .select_img_rotate {
  transform: rotate(180deg);
}

.selectBox .optionBox {
  position: absolute;
  top: 34px;
  width: 88%;
  box-sizing: border-box;
  overflow-y: auto;
  background: #efefef;
  transition: height 0.3s;
  z-index: 9999;
  animation: myfirst  1s;
  color: black;
}

@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: auto;
    }
}
.selectBox .optionBox .option {
  display: block;
  width:70%;
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 10rpx;
  z-index: 9999;
  border-bottom: 1px solid #bfbfbf;
  margin:0 auto;
}
