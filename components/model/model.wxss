.model{position: fixed; left: 0; top: 0; width: 100%; height: 100vh; background: rgba(0, 0, 0, 0.5);/*蒙层的透明度可以自定义*/ z-index: 9999999999;}
.show{display: block;}
.close{display: none;}
/*下方可以自定义*/
.model-pack{width: 15rem; margin: 0 auto; margin-top: 50%; background: #fff; border-radius: 8px;}
.model-title{font-size: .8rem; text-align: center; padding: 0.6rem 0; color: #666}
.model-content{font-size: 0.8rem; padding: 0.3rem 0.8rem; padding-bottom: 1.0rem}
.model-button{font-size: 0.9rem; margin-top: 0.3rem; width: 100%; border-top: 1px solid #eee; border-radius: 0 0 8px 8px; overflow: hidden; text-align: center;}
.model-button-cancel{float: left; width: 50%; height: 2.5rem; line-height: 2.5rem; box-sizing: border-box; border-right: 1px solid #eee;}
.model-button-confirm{width: 50%; float: left; height: 2.5rem; line-height: 2.5rem;}
.confirm{height: 2.5rem; line-height: 2.5rem;}

button{ background: #fff;color: #c31f23}
button::after{display: none}
button:active{background: #fff}
button .button-hover{background: #fff}