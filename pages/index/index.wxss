/**index.wxss**/

/* 顶部搜索 */

.ss-news-banner-cont {
  padding: 10px;
  z-index: 1;
  left: 0;
  right: 0;
  /* background-color: #e17377; */
}

.ss-news-search-box input {
  width: 74%;
  font-size: 13px;
  color: #333;
  padding: 2px 30px;
  border-radius: 14px;
  background:url(data:image/png;base64,)  no-repeat #fff 10px center;
  background-size:14px 14px;
  z-index:-1;
}

.ss-news-search-btn {
  color: rgb(39, 34, 34);
  right: 10px;
  font-size: 14px;
}

/* 功能导航 */

.ss-index-nav-item image {
  display: block;
  width: 50px;
  height: 50px;
  margin: 0 auto;
}

.ss-index-nav {
  padding: 15px 0;
  background: #fff;
}

.ss-index-nav-item text {
  padding-top: 5px;
  display: block;
}

/* 公告 */

.gonggao {
  padding: 5px 10px;
}

.swiper-adv-box {
  background: #fff;
  border-radius: 15px;
  height: 30px;
}

.swiper-adv {
  border-radius: 15px;
  background: #fff;
  height: 30px;
  padding-left: 66px;
  padding-right: 60px;
}

.swiper-adv-item {
  height: 20px;
}

.getAll {
  border-left: 2px solid #ccc;
}

