
/* table */
.table {
  border: 0px solid darkgray;
}
.tr:first-child{
  border-bottom: 1px solid #ccc;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  /* height: 2rem; */
  align-items: center;
}
.th:first-child,
.td:first-child,
.th:last-child,
.td:last-child{
  width: 15%;
  justify-content: center;
  text-align: center;
}
.th:nth-child(2),
.td:nth-child(2){
  justify-content: left;
  text-align: left;
}
.td {
  width:70%;
  justify-content: left;
  text-align: left;
}
.th {
  width: 70%;
  justify-content: center;
  display: flex;
  height: 3rem;
  align-items: center;
}

.call{
  width:50px;
  height:50px;
  background:url(data:image/png;base64,)  no-repeat #ff0000 center center;
  background-size:80% 80%;
  opacity:0.5;
  z-index:-1;
  border-radius:10px;
}